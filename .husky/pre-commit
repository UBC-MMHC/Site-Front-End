#!/bin/sh

# Load nvm (Node Version Manager) if it exists
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"

# Fallback: Add common node installation paths
export PATH="/usr/local/bin:$HOME/.nvm/versions/node/$(node -v 2>/dev/null || echo v20)/bin:$PATH"

# Run lint-staged
npx lint-staged
